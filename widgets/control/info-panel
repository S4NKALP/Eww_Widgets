#!/bin/bash

[ ! -d $cache_dir ] && mkdir $cache_dir

cache_dir="$HOME/.cache/eww"
cache="$cache_dir/info-center.eww"
config="$HOME/.config/polybar/widgets/control"

run () {
	eww -c $config open info-panel
	sleep 0.6
	eww -c $config update info-panel=true
}

if [[ ! `pidof eww` ]]; then
	eww -c $config daemon
	sleep 1
else
	if [ ! -f $cache ]; then
		touch $cache
		run
	else
		eww -c $config update info-panel=false
		sleep 0.6
		eww -c $config close info-panel
		rm $cache
	fi
fi